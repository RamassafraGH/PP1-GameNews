{% extends 'base.html.twig' %}

{% block title %}GameNews - Portal de Noticias sobre Videojuegos{% endblock %}

{% block body %}
<div class="hero-section text-center mb-5 p-5" style="background: linear-gradient(135deg, #7c3aed 0%, #2dd4bf 100%); border-radius: 15px;">
    <h1 class="display-4 fw-bold text-white mb-3">Bienvenido a GameNews</h1>
    <p class="lead text-white mb-4">Tu fuente definitiva de noticias sobre videojuegos</p>
    <a href="{{ path('app_news_index') }}" class="btn btn-light btn-lg">
        <i class="bi bi-newspaper"></i> Explorar Noticias
    </a>
</div>

<h2 class="mb-4"><i class="bi bi-star-fill text-warning"></i> Noticias Destacadas</h2>

<div class="row g-4">
    {% for news in featuredNews %}
        <div class="col-md-4">
            <div class="card h-100">
                {% if news.featuredImage %}
                    <img src="{{ asset('uploads/news/' ~ news.featuredImage) }}" class="card-img-top news-card-img" alt="{{ news.title }}">
                {% else %}
                    <div class="card-img-top news-card-img bg-secondary d-flex align-items-center justify-content-center">
                        <i class="bi bi-image" style="font-size: 4rem; color: #666;"></i>
                    </div>
                {% endif %}
                
                <div class="card-body">
                    {% for category in news.categories %}
                        <span class="category-badge">{{ category.name }}</span>
                    {% endfor %}
                    
                    <h5 class="card-title mt-2">{{ news.title }}</h5>
                    <p class="card-text text-muted">{{ news.subtitle|default('') }}</p>
                    
                    <div class="d-flex justify-content-between align-items-center">
                        <small class="text-muted">
                            <i class="bi bi-person"></i> {{ news.author.username }}
                        </small>
                        <div class="rating-stars">
                            {% if news.averageRating %}
                                {% for i in 1..5 %}
                                    <i class="bi bi-star{% if i <= news.averageRating %}-fill{% endif %}"></i>
                                {% endfor %}
                                <small>({{ news.ratingCount }})</small>
                            {% else %}
                                <small class="text-muted">Sin valoraciones</small>
                            {% endif %}
                        </div>
                    </div>
                </div>
                
                <div class="card-footer bg-transparent">
                    <a href="{{ path('app_news_show', {slug: news.slug}) }}" class="btn btn-primary w-100">
                        Leer más <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>
    {% else %}
        <div class="col-12">
            <div class="alert alert-info">
                <i class="bi bi-info-circle"></i> No hay noticias publicadas todavía.
            </div>
        </div>
    {% endfor %}
</div>
{% endblock %}