{% extends 'base.html.twig' %}

{% block title %}Gestión de Usuarios - GameNews{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-people"></i> Gestión de Usuarios</h1>
    <a href="{{ path('app_admin_dashboard') }}" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Volver al Dashboard
    </a>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-dark table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Usuario</th>
                        <th>Email</th>
                        <th>Rol</th>
                        <th>Estado</th>
                        <th>Registro</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in pagination %}
                        <tr>
                            <td>{{ user.id }}</td>
                            <td>
                                {% if user.profileImage %}
                                    <img src="{{ asset('uploads/profiles/' ~ user.profileImage) }}" alt="{{ user.username }}" class="rounded-circle me-2" style="width: 30px; height: 30px; object-fit: cover;">
                                {% endif %}
                                {{ user.username }}
                            </td>
                            <td>{{ user.email }}</td>
                            <td>
                                {% if 'ROLE_ADMIN' in user.roles %}
                                    <span class="badge bg-danger">Administrador</span>
                                {% elseif 'ROLE_EDITOR' in user.roles %}
                                    <span class="badge bg-info">Editor</span>
                                {% else %}
                                    <span class="badge bg-secondary">Usuario</span>
                                {% endif %}
                            </td>
                            <td>
                                {% if user.isActive %}
                                    <span class="badge bg-success">Activo</span>
                                {% else %}
                                    <span class="badge bg-danger">Inactivo</span>
                                {% endif %}
                            </td>
                            <td>{{ user.createdAt|date('d/m/Y') }}</td>
                            <td>
                                <div class="btn-group btn-group-sm" role="group">
                                    <form method="post" action="{{ path('app_admin_users_toggle_status', {id: user.id}) }}" style="display: inline;">
                                        <input type="hidden" name="_token" value="{{ csrf_token('toggle_status' ~ user.id) }}">
                                        <button type="submit" class="btn btn-outline-{% if user.isActive %}danger{% else %}success{% endif %}" title="{% if user.isActive %}Desactivar{% else %}Activar{% endif %}">
                                            <i class="bi bi-{% if user.isActive %}x-circle{% else %}check-circle{% endif %}"></i>
                                        </button>
                                    </form>

                                    <button type="button" class="btn btn-outline-warning" data-bs-toggle="modal" data-bs-target="#roleModal{{ user.id }}" title="Cambiar rol">
                                        <i class="bi bi-person-badge"></i>
                                    </button>
                                </div>

                                <!-- Modal para cambiar rol -->
                                <div class="modal fade" id="roleModal{{ user.id }}" tabindex="-1">
                                    <div class="modal-dialog">
                                        <div class="modal-content bg-dark">
                                            <div class="modal-header">
                                                <h5 class="modal-title">Cambiar Rol - {{ user.username }}</h5>
                                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                            </div>
                                            <form method="post" action="{{ path('app_admin_users_change_role', {id: user.id}) }}">
                                                <div class="modal-body">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('change_role' ~ user.id) }}">
                                                    <div class="mb-3">
                                                        <label class="form-label">Seleccionar Rol:</label>
                                                        <select name="role" class="form-select">
                                                            <option value="ROLE_USER" {% if 'ROLE_USER' in user.roles and 'ROLE_EDITOR' not in user.roles and 'ROLE_ADMIN' not in user.roles %}selected{% endif %}>Usuario</option>
                                                            <option value="ROLE_EDITOR" {% if 'ROLE_EDITOR' in user.roles %}selected{% endif %}>Editor</option>
                                                            <option value="ROLE_ADMIN" {% if 'ROLE_ADMIN' in user.roles %}selected{% endif %}>Administrador</option>
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                                                    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="7" class="text-center text-muted">No hay usuarios registrados</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="mt-3">
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>
</div>
{% endblock %}