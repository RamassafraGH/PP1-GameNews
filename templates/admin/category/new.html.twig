{% extends 'base.html.twig' %}

{% block title %}Nueva Categoría - GameNews{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title mb-4"><i class="bi bi-plus-lg"></i> Nueva Categoría</h3>

                {{ form_start(categoryForm) }}
                    <div class="mb-3">
                        {{ form_label(categoryForm.name) }}
                        {{ form_widget(categoryForm.name) }}
                        {{ form_errors(categoryForm.name) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(categoryForm.description) }}
                        {{ form_widget(categoryForm.description) }}
                        {{ form_errors(categoryForm.description) }}
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-lg"></i> Crear Categoría
                        </button>
                        <a href="{{ path('app_admin_category_index') }}" class="btn btn-secondary">
                            <i class="bi bi-x-lg"></i> Cancelar
                        </a>
                    </div>
                {{ form_end(categoryForm) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}