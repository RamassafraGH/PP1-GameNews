{% extends 'base.html.twig' %}

{% block title %}Nueva Etiqueta - GameNews{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title mb-4"><i class="bi bi-plus-lg"></i> Nueva Etiqueta</h3>

                {{ form_start(tagForm) }}
                    <div class="mb-3">
                        {{ form_label(tagForm.name) }}
                        {{ form_widget(tagForm.name) }}
                        {{ form_errors(tagForm.name) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(tagForm.description) }}
                        {{ form_widget(tagForm.description) }}
                        {{ form_errors(tagForm.description) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(tagForm.synonyms) }}
                        {{ form_widget(tagForm.synonyms) }}
                        {{ form_errors(tagForm.synonyms) }}
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-lg"></i> Crear Etiqueta
                        </button>
                        <a href="{{ path('app_admin_tag_index') }}" class="btn btn-secondary">
                            <i class="bi bi-x-lg"></i> Cancelar
                        </a>
                    </div>
                {{ form_end(tagForm) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}