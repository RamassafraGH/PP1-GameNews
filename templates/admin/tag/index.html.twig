{% extends 'base.html.twig' %}

{% block title %}Gestión de Etiquetas - GameNews{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-tags"></i> Gestión de Etiquetas</h1>
    <a href="{{ path('app_admin_tag_new') }}" class="btn btn-primary">
        <i class="bi bi-plus-lg"></i> Nueva Etiqueta
    </a>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-dark table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nombre</th>
                        <th>Descripción</th>
                        <th>Sinónimos</th>
                        <th>Fecha Creación</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {% for tag in tags %}
                        <tr>
                            <td>{{ tag.id }}</td>
                            <td>{{ tag.name }}</td>
                            <td>{{ tag.description|default('Sin descripción')|slice(0, 50) }}...</td>
                            <td>{{ tag.synonyms|default('-') }}</td>
                            <td>{{ tag.createdAt|date('d/m/Y') }}</td>
                            <td>
                                <a href="{{ path('app_admin_tag_edit', {id: tag.id}) }}" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <form method="post" action="{{ path('app_admin_tag_delete', {id: tag.id}) }}" style="display: inline;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ tag.id) }}">
                                    <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('¿Estás seguro de eliminar esta etiqueta?')">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6" class="text-center text-muted">No hay etiquetas registradas</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}