{% extends 'base.html.twig' %}

{% block title %}Suscriptores al Boletín - GameNews{% endblock %}

{% block body %}
<div class="mb-3">
    <a href="{{ path('app_admin_dashboard') }}" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Volver al Dashboard
    </a>
</div>
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-envelope"></i> Suscriptores al Boletín</h1>
    <div>
        <a href="{{ path('app_admin_newsletter_send') }}" class="btn btn-primary me-2">
            <i class="bi bi-send"></i> Enviar Boletín
        </a>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> 
            Total de suscriptores activos: <strong>{{ pagination.getTotalItemCount }}</strong>
        </div>

        <div class="table-responsive">
            <table class="table table-dark table-hover">
                <thead>
                    <tr>
                        <th>Usuario</th>
                        <th>Email</th>
                        <th>Fecha de Registro</th>
                        <th>Última Conexión</th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in pagination %}
                        <tr>
                            <td>
                                {% if user.profileImage %}
                                    <img src="{{ asset('uploads/profiles/' ~ user.profileImage) }}" alt="{{ user.username }}" class="rounded-circle me-2" style="width: 30px; height: 30px; object-fit: cover;">
                                {% endif %}
                                {{ user.username }}
                            </td>
                            <td>{{ user.email }}</td>
                            <td>{{ user.createdAt|date('d/m/Y') }}</td>
                            <td>
                                {% if user.lastLoginAt %}
                                    {{ user.lastLoginAt|date('d/m/Y H:i') }}
                                {% else %}
                                    <span class="text-muted">Nunca</span>
                                {% endif %}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4" class="text-center text-muted">No hay suscriptores activos</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="mt-3">
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>
</div>
{% endblock %}