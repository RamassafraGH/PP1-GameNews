{% extends 'base.html.twig' %}

{% block title %}Panel de {% if isAdmin %}Administración{% else %}Editor{% endif %} - GameNews{% endblock %}

{% block body %}
<h1 class="mb-4">
    <i class="bi bi-speedometer2"></i> Panel de 
    {% if isAdmin %}Administración{% else %}Editor{% endif %}
</h1>

{# SECCIÓN PARA EDITORES Y ADMINS #}
<div class="row g-4 mb-4">
    <div class="col-md-{% if isAdmin %}3{% else %}4{% endif %}">
        <div class="card text-center">
            <div class="card-body">
                <i class="bi bi-newspaper" style="font-size: 3rem; color: var(--primary-color);"></i>
                <h3 class="mt-3">{{ publishedNews }}</h3>
                <p class="text-muted">Noticias Publicadas</p>
            </div>
        </div>
    </div>

    <div class="col-md-{% if isAdmin %}3{% else %}4{% endif %}">
        <div class="card text-center">
            <div class="card-body">
                <i class="bi bi-chat-dots" style="font-size: 3rem; color: #10b981;"></i>
                <h3 class="mt-3">{{ totalComments }}</h3>
                <p class="text-muted">Comentarios</p>
            </div>
        </div>
    </div>

    {% if isAdmin %}
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <i class="bi bi-people" style="font-size: 3rem; color: var(--secondary-color);"></i>
                    <h3 class="mt-3">{{ totalUsers }}</h3>
                    <p class="text-muted">Usuarios Registrados</p>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <i class="bi bi-exclamation-triangle" style="font-size: 3rem; color: #f59e0b;"></i>
                    <h3 class="mt-3">{{ pendingReports }}</h3>
                    <p class="text-muted">Denuncias Pendientes</p>
                </div>
            </div>
        </div>
    {% else %}
        <div class="col-md-4">
            <a href="{{ path('app_admin_newsletter_subscribers') }}" class="card text-decoration-none text-center">
                <div class="card-body">
                    <i class="bi bi-envelope" style="font-size: 3rem; color: #8b5cf6;"></i>
                    <h3 class="mt-3">{{ subscribersCount }}</h3>
                    <p class="text-muted">Suscriptores al Boletín</p>
                </div>
            </a>
        </div>
    {% endif %}
</div>

{# MENÚ DE ACCIONES PRINCIPALES #}
<h4 class="mb-3"><i class="bi bi-grid"></i> Gestión de Contenido</h4>
<div class="row g-4 mb-4">
    <div class="col-md-4">
        <a href="{{ path('app_admin_news_index') }}" class="card text-decoration-none h-100">
            <div class="card-body text-center">
                <i class="bi bi-file-earmark-text" style="font-size: 3rem;"></i>
                <h5 class="mt-3">Gestión de Noticias</h5>
                <p class="text-muted small">Crear, editar y eliminar noticias</p>
            </div>
        </a>
    </div>

    <div class="col-md-4">
        <a href="{{ path('app_admin_category_index') }}" class="card text-decoration-none h-100">
            <div class="card-body text-center">
                <i class="bi bi-folder" style="font-size: 3rem;"></i>
                <h5 class="mt-3">Editar Categorías</h5>
                <p class="text-muted small">Administrar categorías de noticias</p>
            </div>
        </a>
    </div>

    <div class="col-md-4">
        <a href="{{ path('app_admin_tag_index') }}" class="card text-decoration-none h-100">
            <div class="card-body text-center">
                <i class="bi bi-tags" style="font-size: 3rem;"></i>
                <h5 class="mt-3">Editar Etiquetas</h5>
                <p class="text-muted small">Administrar etiquetas de noticias</p>
            </div>
        </a>
    </div>
</div>

<div class="row g-4 mb-4">
    <div class="col-md-12">
        <a href="{{ path('app_admin_newsletter_subscribers') }}" class="card text-decoration-none">
            <div class="card-body text-center">
                <i class="bi bi-envelope" style="font-size: 3rem;"></i>
                <h5 class="mt-3">Suscriptores al Boletín</h5>
                <p class="text-muted small">Ver suscriptores y enviar boletines</p>
            </div>
        </a>
    </div>
</div>

{# SECCIÓN SOLO PARA ADMINISTRADORES #}
{% if isAdmin %}
    <h4 class="mb-3"><i class="bi bi-shield-check"></i> Administración del Sitio</h4>
    
    {# ESTADÍSTICAS (Colapsable) #}
    <div class="card mb-3">
        <div class="card-header" style="cursor: pointer;" data-bs-toggle="collapse" data-bs-target="#statsSection">
            <h5 class="mb-0">
                <i class="bi bi-graph-up"></i> Estadísticas del Mes
                <i class="bi bi-chevron-down float-end"></i>
            </h5>
        </div>
        <div id="statsSection" class="collapse show">
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-md-3">
                        <div class="p-3" style="background-color: #1a1a2e; border-radius: 8px;">
                            <h3>{{ monthlyStats.newsThisMonth }}</h3>
                            <p class="text-muted mb-0">Noticias este mes</p>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="p-3" style="background-color: #1a1a2e; border-radius: 8px;">
                            <h3>{{ monthlyStats.commentsThisMonth }}</h3>
                            <p class="text-muted mb-0">Comentarios este mes</p>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="p-3" style="background-color: #1a1a2e; border-radius: 8px;">
                            <h3>{{ monthlyStats.newUsersThisMonth }}</h3>
                            <p class="text-muted mb-0">Nuevos usuarios</p>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="p-3" style="background-color: #1a1a2e; border-radius: 8px;">
                            <h3>{{ subscribersCount }}</h3>
                            <p class="text-muted mb-0">Suscriptores activos</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {# MODERACIÓN (Colapsable) #}
    <div class="card mb-3">
        <div class="card-header" style="cursor: pointer;" data-bs-toggle="collapse" data-bs-target="#moderationSection">
            <h5 class="mb-0">
                <i class="bi bi-shield-check"></i> Moderación
                {% if pendingReports > 0 %}
                    <span class="badge bg-danger">{{ pendingReports }}</span>
                {% endif %}
                <i class="bi bi-chevron-down float-end"></i>
            </h5>
        </div>
        <div id="moderationSection" class="collapse">
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-6">
                        <a href="{{ path('app_admin_moderation_index') }}" class="btn btn-outline-warning w-100 p-3">
                            <i class="bi bi-flag" style="font-size: 2rem;"></i>
                            <h6 class="mt-2 mb-0">Denuncias Pendientes</h6>
                            <p class="mb-0 small text-muted">{{ pendingReports }} sin revisar</p>
                        </a>
                    </div>
                    <div class="col-md-6">
                        <a href="{{ path('app_admin_users_index') }}" class="btn btn-outline-info w-100 p-3">
                            <i class="bi bi-people" style="font-size: 2rem;"></i>
                            <h6 class="mt-2 mb-0">Gestión de Usuarios</h6>
                            <p class="mb-0 small text-muted">{{ totalUsers }} usuarios</p>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {# ACTIVIDAD RECIENTE (Colapsable) #}
    <div class="card mb-3">
        <div class="card-header" style="cursor: pointer;" data-bs-toggle="collapse" data-bs-target="#activitySection">
            <h5 class="mb-0">
                <i class="bi bi-clock-history"></i> Actividad Reciente
                <i class="bi bi-chevron-down float-end"></i>
            </h5>
        </div>
        <div id="activitySection" class="collapse">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-dark table-hover mb-0">
                        <thead>
                            <tr>
                                <th>Noticia</th>
                                <th>Autor</th>
                                <th>Estado</th>
                                <th>Fecha</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for news in recentNews %}
                                <tr>
                                    <td>{{ news.title }}</td>
                                    <td>{{ news.author.username }}</td>
                                    <td>
                                        {% if news.status == 'published' %}
                                            <span class="badge bg-success">Publicado</span>
                                        {% else %}
                                            <span class="badge bg-warning">Borrador</span>
                                        {% endif %}
                                    </td>
                                    <td>{{ news.createdAt|date('d/m/Y H:i') }}</td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="4" class="text-center text-muted">No hay actividad reciente</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% else %}
    {# ACTIVIDAD RECIENTE PARA EDITORES (Siempre visible) #}
    <div class="card">
        <div class="card-body">
            <h4 class="card-title"><i class="bi bi-clock-history"></i> Actividad Reciente</h4>
            <hr>
            
            <div class="table-responsive">
                <table class="table table-dark table-hover">
                    <thead>
                        <tr>
                            <th>Noticia</th>
                            <th>Autor</th>
                            <th>Estado</th>
                            <th>Fecha</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for news in recentNews %}
                            <tr>
                                <td>{{ news.title }}</td>
                                <td>{{ news.author.username }}</td>
                                <td>
                                    {% if news.status == 'published' %}
                                        <span class="badge bg-success">Publicado</span>
                                    {% else %}
                                        <span class="badge bg-warning">Borrador</span>
                                    {% endif %}
                                </td>
                                <td>{{ news.createdAt|date('d/m/Y H:i') }}</td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="4" class="text-center text-muted">No hay actividad reciente</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endif %}
{% endblock %}