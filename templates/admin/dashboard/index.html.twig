{#
/**
 * templates/admin/dashboard/index.html.twig
 * Panel de Control Administrativo
 *
 * Esta plantilla implementa el dashboard principal del área administrativa.
 * Adapta su contenido según el rol del usuario (Admin/Editor):
 *
 * 1. Gestión de Contenido (Todos):
 *    - Noticias: Crear, editar, gestionar estado
 *    - Categorías: Administración de categorías
 *    - Tags: Gestión de etiquetas
 *
 * 2. Administración del Sistema (Solo Admin):
 *    - Usuarios: Gestión de cuentas y roles
 *    - Moderación: Reportes y comentarios
 *    - Newsletter: Gestión de suscripciones
 *
 * Variables Twig esperadas:
 * - isAdmin: boolean, true si el usuario es administrador
 * - publishedNews: int, cantidad de noticias publicadas
 * - totalUsers: int, número total de usuarios (admin)
 * - pendingReports: int, reportes sin resolver (admin)
 *
 * Seguridad:
 * - Requiere rol ROLE_EDITOR o ROLE_ADMIN
 * - Secciones administrativas solo visibles para ROLE_ADMIN
 */
#}
{% extends 'base.html.twig' %}

{% block title %}Panel de {% if isAdmin %}Administración{% else %}Editor{% endif %} - GameNews{% endblock %}

{% block body %}
<h1 class="mb-4">
    <i class="bi bi-speedometer2"></i> Panel de 
    {% if isAdmin %}Administración{% else %}Editor{% endif %}
</h1>

{# SECCIÓN: GESTIÓN DE CONTENIDO (Para Editores y Admins) #}
<h4 class="mb-3"><i class="bi bi-grid"></i> Gestión de Contenido</h4>
<div class="row g-4 mb-4">
    <div class="col-md-3">
        <a href="{{ path('app_admin_news_index') }}" class="card text-decoration-none h-100">
            <div class="card-body text-center">
                <i class="bi bi-file-earmark-text" style="font-size: 3rem; color: var(--primary-color);"></i>
                <h5 class="mt-3 mb-2">Noticias</h5>
                <p class="text-muted small mb-0">{{ publishedNews }} publicadas</p>
            </div>
        </a>
    </div>

    <div class="col-md-3">
        <a href="{{ path('app_admin_category_index') }}" class="card text-decoration-none h-100">
            <div class="card-body text-center">
                <i class="bi bi-folder" style="font-size: 3rem; color: #10b981;"></i>
                <h5 class="mt-3 mb-2">Categorías</h5>
                <p class="text-muted small mb-0">Administrar categorías</p>
            </div>
        </a>
    </div>

    <div class="col-md-3">
        <a href="{{ path('app_admin_tag_index') }}" class="card text-decoration-none h-100">
            <div class="card-body text-center">
                <i class="bi bi-tags" style="font-size: 3rem; color: #3b82f6;"></i>
                <h5 class="mt-3 mb-2">Etiquetas</h5>
                <p class="text-muted small mb-0">Administrar etiquetas</p>
            </div>
        </a>
    </div>

    <div class="col-md-3">
        <a href="{{ path('app_admin_newsletter_subscribers') }}" class="card text-decoration-none h-100">
            <div class="card-body text-center">
                <i class="bi bi-envelope" style="font-size: 3rem; color: #8b5cf6;"></i>
                <h5 class="mt-3 mb-2">Boletín</h5>
                <p class="text-muted small mb-0">{{ subscribersCount }} suscriptores</p>
            </div>
        </a>
    </div>
</div>

{# SECCIÓN SOLO PARA ADMINISTRADORES #}
{% if isAdmin %}
    <hr class="my-4">

    {# ESTADÍSTICAS DEL SITIO (Colapsable con Filtros) #}
    <h4 class="mb-3"><i class="bi bi-graph-up"></i> Estadísticas del Sitio</h4>
    
    <div class="card mb-4">
        <div class="card-header" style="cursor: pointer;" data-bs-toggle="collapse" data-bs-target="#statsSection">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="bi bi-calendar-month"></i> Estadísticas de Actividad
                </h5>
                <i class="bi bi-chevron-down"></i>
            </div>
        </div>
        <div id="statsSection" class="collapse show">
            <div class="card-body">
                {# FILTROS DE PERÍODO #}
                <div class="mb-4">
                    <div class="btn-group" role="group">
                        <a href="{{ path('app_admin_dashboard', {period: 'week'}) }}" 
                           class="btn btn-{% if currentPeriod == 'week' %}primary{% else %}outline-primary{% endif %}">
                            <i class="bi bi-calendar-week"></i> Esta Semana
                        </a>
                        <a href="{{ path('app_admin_dashboard', {period: 'month'}) }}" 
                           class="btn btn-{% if currentPeriod == 'month' %}primary{% else %}outline-primary{% endif %}">
                            <i class="bi bi-calendar-month"></i> Este Mes
                        </a>
                        <a href="{{ path('app_admin_dashboard', {period: 'year'}) }}" 
                           class="btn btn-{% if currentPeriod == 'year' %}primary{% else %}outline-primary{% endif %}">
                            <i class="bi bi-calendar-range"></i> Este Año
                        </a>
                    </div>
                </div>

                {# ESTADÍSTICAS DEL PERÍODO SELECCIONADO #}
                <div class="row g-4 text-center">
                    <div class="col-md-4">
                        <div class="p-4" style="background-color: #1a1a2e; border-radius: 12px;">
                            <i class="bi bi-newspaper" style="font-size: 2.5rem; color: var(--primary-color);"></i>
                            <h2 class="mt-3 mb-1">{{ monthlyStats.newsCount }}</h2>
                            <p class="text-muted mb-0">Noticias {{ monthlyStats.periodLabel }}</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="p-4" style="background-color: #1a1a2e; border-radius: 12px;">
                            <i class="bi bi-chat-dots" style="font-size: 2.5rem; color: #10b981;"></i>
                            <h2 class="mt-3 mb-1">{{ monthlyStats.commentsCount }}</h2>
                            <p class="text-muted mb-0">Comentarios {{ monthlyStats.periodLabel }}</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="p-4" style="background-color: #1a1a2e; border-radius: 12px;">
                            <i class="bi bi-people" style="font-size: 2.5rem; color: var(--secondary-color);"></i>
                            <h2 class="mt-3 mb-1">{{ monthlyStats.newUsersCount }}</h2>
                            <p class="text-muted mb-0">Nuevos usuarios {{ monthlyStats.periodLabel }}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {# MODERACIÓN (Sin colapsar, igual a Gestión de Contenido) #}
    <h4 class="mb-3"><i class="bi bi-shield-check"></i> Moderación</h4>
    <div class="row g-4 mb-4">
        <div class="col-md-6">
            <a href="{{ path('app_admin_moderation_index') }}" class="card text-decoration-none h-100">
                <div class="card-body text-center">
                    <i class="bi bi-flag" style="font-size: 3rem; color: #f59e0b;"></i>
                    <h5 class="mt-3 mb-2">Denuncias</h5>
                    <p class="text-muted small mb-0">{{ pendingReports }} pendientes de revisar</p>
                    {% if pendingReports > 0 %}
                        <span class="badge bg-danger mt-2">¡Requiere atención!</span>
                    {% endif %}
                </div>
            </a>
        </div>

        <div class="col-md-6">
            <a href="{{ path('app_admin_users_index') }}" class="card text-decoration-none h-100">
                <div class="card-body text-center">
                    <i class="bi bi-people" style="font-size: 3rem; color: var(--secondary-color);"></i>
                    <h5 class="mt-3 mb-2">Gestión de Usuarios</h5>
                    <p class="text-muted small mb-0">{{ totalUsers }} usuarios registrados</p>
                </div>
            </a>
        </div>
    </div>

    {# ACTIVIDAD RECIENTE (Colapsable) #}
    <h4 class="mb-3"><i class="bi bi-clock-history"></i> Actividad Reciente</h4>
    <div class="card mb-4">
        <div class="card-header" style="cursor: pointer;" data-bs-toggle="collapse" data-bs-target="#activitySection">
            <h5 class="mb-0">
                <i class="bi bi-activity"></i> Últimas Noticias Publicadas
                <i class="bi bi-chevron-down float-end"></i>
            </h5>
        </div>
        <div id="activitySection" class="collapse">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-dark table-hover mb-0">
                        <thead>
                            <tr>
                                <th>Noticia</th>
                                <th>Autor</th>
                                <th>Estado</th>
                                <th>Fecha</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for news in recentNews %}
                                <tr>
                                    <td>
                                        <a href="{{ path('app_news_show', {slug: news.slug}) }}" class="text-decoration-none text-white" target="_blank">
                                            {{ news.title }}
                                        </a>
                                    </td>
                                    <td>{{ news.author.username }}</td>
                                    <td>
                                        {% if news.status == 'published' %}
                                            <span class="badge bg-success">Publicado</span>
                                        {% else %}
                                            <span class="badge bg-warning">Borrador</span>
                                        {% endif %}
                                    </td>
                                    <td>{{ news.createdAt|date('d/m/Y H:i') }}</td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="4" class="text-center text-muted">No hay actividad reciente</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

{% else %}
    {# ACTIVIDAD RECIENTE PARA EDITORES (Siempre visible) #}
    <hr class="my-4">
    <h4 class="mb-3"><i class="bi bi-clock-history"></i> Actividad Reciente</h4>
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-dark table-hover">
                    <thead>
                        <tr>
                            <th>Noticia</th>
                            <th>Autor</th>
                            <th>Estado</th>
                            <th>Fecha</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for news in recentNews %}
                            <tr>
                                <td>
                                    <a href="{{ path('app_news_show', {slug: news.slug}) }}" class="text-decoration-none text-white" target="_blank">
                                        {{ news.title }}
                                    </a>
                                </td>
                                <td>{{ news.author.username }}</td>
                                <td>
                                    {% if news.status == 'published' %}
                                        <span class="badge bg-success">Publicado</span>
                                    {% else %}
                                        <span class="badge bg-warning">Borrador</span>
                                    {% endif %}
                                </td>
                                <td>{{ news.createdAt|date('d/m/Y H:i') }}</td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="4" class="text-center text-muted">No hay actividad reciente</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endif %}
{% endblock %}