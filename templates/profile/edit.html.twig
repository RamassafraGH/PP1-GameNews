{% extends 'base.html.twig' %}

{% block title %}Editar Perfil - GameNews{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title mb-4"><i class="bi bi-pencil"></i> Editar Perfil</h3>

                {{ form_start(profileForm) }}
                    <div class="mb-3">
                        {{ form_label(profileForm.username) }}
                        {{ form_widget(profileForm.username) }}
                        {{ form_errors(profileForm.username) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(profileForm.profileImageFile) }}
                        {{ form_widget(profileForm.profileImageFile) }}
                        {{ form_errors(profileForm.profileImageFile) }}
                        <small class="form-text text-muted">Máximo 2MB. Formatos: JPG, PNG. Resolución máxima: 500x500px.</small>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-lg"></i> Guardar Cambios
                        </button>
                        <a href="{{ path('app_profile') }}" class="btn btn-secondary">
                            <i class="bi bi-x-lg"></i> Cancelar
                        </a>
                    </div>
                {{ form_end(profileForm) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}